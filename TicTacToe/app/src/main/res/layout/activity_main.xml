<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers"
            android:text="@string/titulo_tela_jogo"
            android:textColor="#e67e22"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textoGameOver"
            android:layout_width="364dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFD400"
            android:fontFamily="@font/bangers"
            android:text="Jogador X Venceu!!"
            android:textAlignment="center"
            android:textColor="#F60303"
            android:textColorHint="#BF5656"
            android:textSize="30dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoTitulo" />

        <Button
            android:id="@+id/botaoReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:backgroundTint="#FF5722"
            android:onClick="pegarBotaoClicado"
            android:text="Reiniciar"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoGameOver" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <Button
            android:id="@+id/botao_0_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao_0_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30dp" />

        <Button
            android:id="@+id/botao_0_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <Button
            android:id="@+id/botao_1_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao_1_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao_1_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <Button
            android:id="@+id/botao_2_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao_2_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao_2_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />
    </TableRow>


</TableLayout>