<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:fontFamily="@font/bangers"
            android:text="@string/titulo_tela_jogo"
            android:textAlignment="center"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textoVitoria"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:background="#FFEB3B"
            android:backgroundTint="#FFEB3B"
            android:fontFamily="@font/bangers"
            android:text="Jogador X Venceu a partida"
            android:textAlignment="center"
            android:textColor="#F60404"
            android:textColorHighlight="#FFEB3B"
            android:textSize="38dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <Button
            android:id="@+id/botao_0_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao_0_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30dp" />

        <Button
            android:id="@+id/botao_0_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <Button
            android:id="@+id/botao_1_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao_1_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao_1_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <Button
            android:id="@+id/botao_2_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao_2_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao_2_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:onClick="pegarBotaoClicado"
            android:textColor="@color/cor_do_x"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/botao_reset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="pegarBotaoClicado"
            android:text="Reiniciar "
            android:textColor="#000000"
            android:visibility="invisible" />

    </TableRow>
</TableLayout>